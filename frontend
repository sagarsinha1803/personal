import React, { useState, useEffect, useRef } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [checkpointId, setCheckpointId] = useState("");
  const [messages, setMessages] = useState([]);
  const toolOutputRef = useRef("");

  // First-time greeting
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text: `Hello! ðŸ‘‹ I'm your AI Assistant.\nI can help with device details, troubleshooting, SSH automation and more.\n\nHow can I assist you today? ðŸ˜Š`,
      },
    ]);
  }, []);

  const sendMessage = async () => {
    if (!input.trim()) return;

    const userMsg = input;
    setInput("");

    // Add user message
    setMessages((prev) => [...prev, { type: "user", text: userMsg }]);

    const payload = {
      message: userMsg,
      protected_mode: false,
      checkpoint_id: checkpointId || null
    };

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload)
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder();
    toolOutputRef.current = "";
    let toolCallInserted = false;

    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value);
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        let jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // Save checkpoint id
        if (event.checkpoint_id) {
          setCheckpointId(event.checkpoint_id);
        }

        // ------- TOOL CALL -------
        if (event.type === "tool_call") {
          toolCallInserted = true;

          const newToolCall = {
            type: "tool_call",
            tool: event.tool,
            args: event.args,
          };

          setMessages((prev) => {
            const lastUserIndex = prev.map((m) => m.type).lastIndexOf("user");
            const before = prev.slice(0, lastUserIndex + 1);
            const after = prev.slice(lastUserIndex + 1);
            return [...before, newToolCall, ...after];
          });

          continue;
        }

        // ------- TOOL OUTPUT -------
        if (event.type === "message") {
          if (toolCallInserted) {
            toolOutputRef.current += event.content;
            continue;
          }

          // Regular assistant message
          setMessages((prev) => [
            ...prev,
            { type: "ai", text: event.content }
          ]);
        }
      }
    }

    // Add tool output after tool call
    if (toolOutputRef.current) {
      setMessages((prev) => [
        ...prev,
        { type: "tool_output", text: toolOutputRef.current }
      ]);
    }
  };

  // --- Render Message Bubbles ---
  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={styles.pre}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_call")
      return (
        <div style={styles.toolCall}>
          <strong>ðŸ›  TOOL CALL: {msg.tool}</strong>
          <pre style={styles.pre}>
            {JSON.stringify(msg.args, null, 2)}
          </pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={styles.pre}>{msg.text}</pre>
        </div>
      );
  };

  return (
    <div style={styles.page}>
      {/* Checkpoint ID Box */}
      <div style={styles.cpRow}>
        <label>Checkpoint ID:</label>
        <input
          style={styles.cpInput}
          value={checkpointId}
          placeholder="Enter checkpoint id"
          onChange={(e) => setCheckpointId(e.target.value)}
        />
      </div>

      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {messages.map((msg, i) => (
          <div key={i}>{renderBubble(msg)}</div>
        ))}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a messageâ€¦"
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

const styles = {
  page: { width: "900px", margin: "0 auto", fontFamily: "Arial" },

  title: { textAlign: "center", marginBottom: "10px" },

  chatBox: {
    height: "550px",
    overflowY: "auto",
    background: "#fafafa",
    borderRadius: "10px",
    padding: "15px",
    border: "1px solid #ccc",
  },

  pre: { margin: 0, whiteSpace: "pre-wrap", wordWrap: "break-word" },

  cpRow: { marginBottom: "10px", display: "flex", gap: "10px" },
  cpInput: {
    padding: "6px",
    borderRadius: "6px",
    border: "1px solid #aaa",
  },

  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "white",
    padding: "10px",
    borderRadius: "10px",
    marginTop: "10px",
    marginLeft: "200px",
  },

  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px",
    borderRadius: "10px",
    marginTop: "10px",
    marginRight: "200px",
  },

  toolCall: {
    background: "#fff5d1",
    padding: "10px",
    border: "1px solid #f1cf6b",
    borderRadius: "10px",
    marginTop: "10px",
  },

  toolOutput: {
    background: "#e3f0ff",
    padding: "10px",
    border: "1px solid #a7cdfc",
    borderRadius: "10px",
    marginTop: "10px",
  },

  inputBar: { display: "flex", marginTop: "10px" },
  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "10px",
    border: "1px solid #ccc",
  },

  sendBtn: {
    marginLeft: "10px",
    padding: "12px 20px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "10px",
    border: "none",
  },
};
