import React, { useState, useRef, useEffect } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [checkpointId, setCheckpointId] = useState("");
  const [messages, setMessages] = useState([]);
  const toolOutputRef = useRef("");

  useEffect(() => {
    // Initial greeting message
    setMessages([
      {
        type: "ai",
        text: `Hello! ðŸ‘‹ I'm your AI Assistant.\nI can help with device details, troubleshooting, SSH automation and more.\n\nHow can I assist you today? ðŸ˜Š`,
      },
    ]);
  }, []);

  const sendMessage = async () => {
    if (!input.trim()) return;

    const userMsg = input;
    setInput("");

    // Add user message
    setMessages((prev) => [...prev, { type: "user", text: userMsg }]);

    const payload = {
      message: userMsg,
      protected_mode: false,
      checkpoint_id: checkpointId || null,
    };

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder();

    let lastEventWasToolCall = false;
    toolOutputRef.current = "";

    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value);
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        let jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // ðŸ§¿ Save checkpoint_id if received
        if (event.checkpoint_id) {
          setCheckpointId(event.checkpoint_id);
        }

        // ==================================================
        // ðŸ›  TOOL CALL HANDLING
        // Insert tool call **right after last user message**
        // ==================================================
        if (event.type === "tool_call") {
          lastEventWasToolCall = true;

          const toolCallBubble = {
            type: "tool_call",
            tool: event.tool,
            args: event.args,
          };

          setMessages((prev) => {
            const lastUserIndex = prev.map((m) => m.type).lastIndexOf("user");
            const before = prev.slice(0, lastUserIndex + 1);
            const after = prev.slice(lastUserIndex + 1);
            return [...before, toolCallBubble, ...after];
          });

          continue;
        }

        // ==================================================
        // ðŸ“„ TOOL OUTPUT (the first message after tool_call)
        // ==================================================
        if (event.type === "message") {
          if (lastEventWasToolCall) {
            toolOutputRef.current += event.content;
            continue;
          }

          // ==================================================
          // ðŸ¤– NORMAL AI MESSAGE
          // ==================================================
          setMessages((prev) => [
            ...prev,
            { type: "ai", text: event.content },
          ]);
        }
      }
    }

    // After streaming ends â†’ flush tool output as bubble
    if (toolOutputRef.current) {
      setMessages((prev) => [
        ...prev,
        {
          type: "tool_output",
          text: toolOutputRef.current,
        },
      ]);
    }
  };

  // -------------------------------------------------------
  // UI RENDER HELPERS
  // -------------------------------------------------------
  const renderBubble = (msg) => {
    switch (msg.type) {
      case "user":
        return <div style={styles.userMsg}>{msg.text}</div>;

      case "ai":
        return (
          <div style={styles.aiMsg}>
            <pre style={{ margin: 0, whiteSpace: "pre-wrap" }}>{msg.text}</pre>
          </div>
        );

      case "tool_call":
        return (
          <div style={styles.toolCall}>
            <strong>ðŸ›  TOOL CALL: {msg.tool}</strong>
            <pre style={{ margin: 0, whiteSpace: "pre-wrap" }}>
              {JSON.stringify(msg.args, null, 2)}
            </pre>
          </div>
        );

      case "tool_output":
        return (
          <div style={styles.toolOutput}>
            <pre style={{ margin: 0, whiteSpace: "pre-wrap" }}>
              {msg.text}
            </pre>
          </div>
        );

      default:
        return null;
    }
  };

  // -------------------------------------------------------
  // UI COMPONENTS
  // -------------------------------------------------------
  return (
    <div style={styles.page}>
      <div style={styles.cpRow}>
        <label>Checkpoint ID: </label>
        <input
          value={checkpointId}
          onChange={(e) => setCheckpointId(e.target.value)}
          placeholder="Enter checkpoint id"
          style={styles.cpInput}
        />
      </div>

      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {messages.map((msg, idx) => (
          <div key={idx}>{renderBubble(msg)}</div>
        ))}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a messageâ€¦"
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// -------------------------------------------------------
const styles = {
  page: {
    width: "900px",
    margin: "20px auto",
    fontFamily: "Arial",
  },
  title: { textAlign: "center", marginBottom: "10px" },

  chatBox: {
    height: "550px",
    border: "1px solid #ccc",
    borderRadius: "12px",
    padding: "15px",
    overflowY: "auto",
    background: "#fafafa",
  },

  cpRow: {
    marginBottom: "10px",
    display: "flex",
    gap: "10px",
    alignItems: "center",
  },

  cpInput: {
    padding: "6px 10px",
    borderRadius: "6px",
    border: "1px solid #aaa",
  },

  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "white",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "10px",
    marginLeft: "200px",
  },

  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "10px",
    marginRight: "200px",
  },

  toolCall: {
    background: "#fff7db",
    border: "1px solid #f4d27d",
    padding: "10px",
    borderRadius: "10px",
    marginTop: "10px",
  },

  toolOutput: {
    background: "#e7f2ff",
    border: "1px solid #a8d0ff",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
  },

  inputBar: {
    display: "flex",
    marginTop: "15px",
  },
  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "10px",
    border: "1px solid #ccc",
  },
  sendBtn: {
    padding: "12px 20px",
    marginLeft: "10px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "10px",
    border: "none",
  },
};
