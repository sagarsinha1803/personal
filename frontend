import React, { useState, useEffect } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);

  const [tempToolCall, setTempToolCall] = useState(null);
  const [toolOutput, setToolOutput] = useState("");

  // ---------------------------------------------------
  // AUTO GREETING
  // ---------------------------------------------------
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ I'm your AI Assistant.\n\n" +
          "I can help you with device info, troubleshooting, SSH tasks, automation and more.\n\n" +
          "How can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  // ---------------------------------------------------
  // SEND MESSAGE HANDLER
  // ---------------------------------------------------
  const sendMessage = async () => {
    if (!input.trim()) return;

    // Add user bubble
    setMessages((prev) => [...prev, { type: "user", text: input }]);

    const payload = {
      message: input,
      protected_mode: false,
      checkpoint_id: null,
    };

    setInput("");
    setLoading(true);
    setTempToolCall(null);
    setToolOutput("");

    // Make an empty AI bubble for streaming
    let aiIndex;
    setMessages((prev) => {
      aiIndex = prev.length;
      return [...prev, { type: "ai", text: "" }];
    });

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder("utf-8");

    // ---------------------------------------------------
    // STREAM LOOP
    // ---------------------------------------------------
    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value, { stream: true });

      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const data = line.replace("data:", "").trim();
        if (!data) continue;

        let event;
        try {
          event = JSON.parse(data);
        } catch {
          continue;
        }

        // =======================
        // TOOL CALL
        // =======================
        if (event.type === "tool_call") {
          setTempToolCall({
            tool: event.tool,
            args: event.args,
          });
          continue;
        }

        // =======================
        // TOOL OUTPUT (multi-chunk)
        // Backend is sending as multiple "message" chunks
        // =======================
        if (event.type === "message") {
          // Tool call should disappear
          if (tempToolCall) setTempToolCall(null);

          // Append tool output
          setToolOutput((prev) => prev + event.content);
          continue;
        }
      }
    }

    setLoading(false);

    // --------------------------------------------
    // FINALLY PUSH TOOL OUTPUT BUBBLE
    // --------------------------------------------
    if (toolOutput) {
      setMessages((prev) => [
        ...prev,
        { type: "tool_output", text: toolOutput },
      ]);
    }
  };

  // ---------------------------------------------------
  // RENDER BUBBLES PROPERLY
  // ---------------------------------------------------
  const Bubble = ({ msg }) => {
    if (msg.type === "user") {
      return <div style={styles.userMsg}>{msg.text}</div>;
    }
    if (msg.type === "ai") {
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap", margin: 0 }}>{msg.text}</pre>
        </div>
      );
    }
    if (msg.type === "tool_output") {
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap", margin: 0 }}>{msg.text}</pre>
        </div>
      );
    }
    return null;
  };

  // ---------------------------------------------------
  // UI
  // ---------------------------------------------------
  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {tempToolCall && (
          <div style={styles.toolCall}>
            <strong>ðŸ›  Tool Call: {tempToolCall.tool}</strong>
            <pre style={{ whiteSpace: "pre-wrap" }}>
              {JSON.stringify(tempToolCall.args, null, 2)}
            </pre>
          </div>
        )}

        {messages.map((msg, idx) => (
          <Bubble key={idx} msg={msg} />
        ))}

        {loading && <div style={styles.loading}>Typing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />

        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// ---------------------------------------------------
// STYLES
// ---------------------------------------------------
const styles = {
  page: { width: "700px", margin: "40px auto", fontFamily: "Arial" },

  title: { textAlign: "center", marginBottom: 12 },

  chatBox: {
    border: "1px solid #ccc",
    background: "#fafafa",
    borderRadius: 10,
    height: 500,
    overflowY: "auto",
    padding: 15,
  },

  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "white",
    padding: "10px 14px",
    borderRadius: 10,
    margin: "8px 0",
    marginLeft: 150,
  },

  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px 14px",
    borderRadius: 10,
    margin: "8px 0",
    marginRight: 150,
  },

  toolCall: {
    background: "#fff7d1",
    border: "1px solid #e9c46a",
    padding: 12,
    borderRadius: 10,
    marginBottom: 10,
  },

  toolOutput: {
    background: "#e3f2ff",
    border: "1px solid #90caf9",
    padding: 12,
    borderRadius: 10,
    marginTop: 10,
  },

  loading: { color: "#777", marginTop: 8 },

  inputBar: { display: "flex", marginTop: 15 },

  input: {
    flex: 1,
    borderRadius: 8,
    border: "1px solid #ccc",
    padding: 12,
  },

  sendBtn: {
    padding: "12px 20px",
    marginLeft: 10,
    borderRadius: 8,
    background: "#4f46e5",
    color: "white",
    border: "none",
  },
};
