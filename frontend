import React, { useState, useEffect, useRef } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);

  const [checkpointId, setCheckpointId] = useState(null); // â­ STORE CHECKPOINT HERE
  const toolOutputRef = useRef("");

  // -------------------------------------------------
  // 1ï¸âƒ£ AUTO GREETING AT CHAT START
  // -------------------------------------------------
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ I'm your AI Assistant.\nI can help you with device details, troubleshooting, SSH automation and more.\n\nHow can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  // -------------------------------------------------
  // 2ï¸âƒ£ SEND MESSAGE (POST + STREAM)
  // -------------------------------------------------
  const sendMessage = async () => {
    if (!input.trim()) return;

    const userMsg = input;

    // Show user message
    setMessages((prev) => [...prev, { type: "user", text: userMsg }]);

    const payload = {
      message: userMsg,
      protected_mode: false,
      checkpoint_id: checkpointId, // â­ SEND STORED CHECKPOINT
    };

    setInput("");
    setLoading(true);
    toolOutputRef.current = "";

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder();

    // STREAM PROCESSING
    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value);
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // â­ SAVE CHECKPOINT ID FROM BACKEND
        if (event.checkpoint_id) {
          setCheckpointId(event.checkpoint_id);
        }

        // -------------------------------------------------
        // ðŸ›  TOOL CALL BUBBLE (insert just after user msg)
        // -------------------------------------------------
        if (event.type === "tool_call") {
          const toolBubble = {
            type: "tool_call",
            tool: event.tool,
            args: event.args,
          };

          setMessages((prev) => {
            const lastUserIndex = prev.map((m) => m.type).lastIndexOf("user");

            const before = prev.slice(0, lastUserIndex + 1);
            const after = prev.slice(lastUserIndex + 1);

            return [...before, toolBubble, ...after];
          });

          continue;
        }

        // -------------------------------------------------
        // ðŸ“„ TOOL OUTPUT STREAMING
        // -------------------------------------------------
        if (event.type === "message") {
          toolOutputRef.current += event.content;
        }
      }
    }

    // -------------------------------------------------
    // FINAL TOOL OUTPUT BUBBLE (below tool call)
    // -------------------------------------------------
    if (toolOutputRef.current.trim() !== "") {
      const outputBubble = {
        type: "tool_output",
        text: toolOutputRef.current,
      };

      setMessages((prev) => {
        const lastToolIndex = prev.map((m) => m.type).lastIndexOf("tool_call");
        if (lastToolIndex === -1) return [...prev, outputBubble];

        const before = prev.slice(0, lastToolIndex + 1);
        const after = prev.slice(lastToolIndex + 1);

        return [...before, outputBubble, ...after];
      });
    }

    setLoading(false);
  };

  // -------------------------------------------------
  // UI RENDER BUBBLES
  // -------------------------------------------------
  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap", margin: 0 }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_call")
      return (
        <div style={styles.toolCall}>
          <strong>ðŸ›  TOOL CALL: {msg.tool}</strong>
          <pre style={{ whiteSpace: "pre-wrap" }}>
            {JSON.stringify(msg.args, null, 2)}
          </pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );
  };

  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {messages.map((msg, i) => (
          <div key={i}>{renderBubble(msg)}</div>
        ))}

        {loading && <div style={styles.loading}>Processing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// -------------------------------------------------
// CSS
// -------------------------------------------------
const styles = {
  page: {
    width: "750px",
    margin: "40px auto",
    fontFamily: "Arial",
  },
  title: { textAlign: "center", marginBottom: "10px" },

  chatBox: {
    height: "540px",
    overflowY: "auto",
    padding: "15px",
    border: "1px solid #ddd",
    borderRadius: "12px",
    background: "#fafafa",
  },

  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "white",
    padding: "10px 15px",
    borderRadius: "10px",
    margin: "8px 0 8px 150px",
  },

  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px 15px",
    borderRadius: "10px",
    margin: "8px 150px 8px 0",
  },

  toolCall: {
    background: "#fff3d4",
    borderLeft: "5px solid #f0c36d",
    padding: "12px",
    borderRadius: "8px",
    margin: "10px 0",
  },

  toolOutput: {
    background: "#e7f2ff",
    borderLeft: "5px solid #82baff",
    padding: "12px",
    borderRadius: "8px",
    margin: "10px 0",
  },

  loading: { marginTop: "10px", color: "#777" },

  inputBar: { display: "flex", marginTop: "15px" },
  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "8px",
    border: "1px solid #ccc",
  },
  sendBtn: {
    marginLeft: "10px",
    padding: "12px 25px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "8px",
    border: "none",
  },
};
