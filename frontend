import React, { useState, useEffect, useRef } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);
  const [checkpointId, setCheckpointId] = useState("");
  const toolOutputRef = useRef("");

  // GREETING
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ I'm your AI Assistant.\nI can help you with device details, troubleshooting, SSH automation and more.\n\nHow can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  // SEND MESSAGE
  const sendMessage = async () => {
    if (!input.trim()) return;

    const userMsg = input;
    setMessages((prev) => [...prev, { type: "user", text: userMsg }]);

    const payload = {
      message: userMsg,
      protected_mode: false,
      checkpoint_id: checkpointId || null,
    };

    setInput("");
    setLoading(true);
    toolOutputRef.current = "";

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder();

    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value);
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // CHECKPOINT UPDATE
        if (event.checkpoint_id) setCheckpointId(event.checkpoint_id);

        // =========================================================
        // TOOL CALL SHOULD BE ATTACHED BELOW LAST USER MESSAGE
        // =========================================================
        if (event.type === "tool_call") {
          const toolBubble = {
            type: "tool_call",
            tool: event.tool,
            args: event.args,
          };

          setMessages((prev) => {
            const lastUserIndex = prev.map((m) => m.type).lastIndexOf("user");
            return [
              ...prev.slice(0, lastUserIndex + 1),
              toolBubble,
              ...prev.slice(lastUserIndex + 1),
            ];
          });

          continue;
        }

        // =========================================================
        // TOOL OUTPUT STREAM â€” TEMP STORE ONLY
        // =========================================================
        if (event.type === "message") {
          toolOutputRef.current += event.content;
        }
      }
    }

    // =========================================================
    // FINAL TOOL OUTPUT should be UNDER the LAST tool_call ONLY
    // =========================================================
    if (toolOutputRef.current.trim()) {
      const outputBubble = {
        type: "tool_output",
        text: toolOutputRef.current,
      };

      setMessages((prev) => {
        const lastToolIndex = prev.map((m) => m.type).lastIndexOf("tool_call");

        if (lastToolIndex === -1) {
          // No tool call â†’ put at the end
          return [...prev, outputBubble];
        }

        return [
          ...prev.slice(0, lastToolIndex + 1),
          outputBubble,
          ...prev.slice(lastToolIndex + 1),
        ];
      });
    }

    setLoading(false);
  };

  // RENDER BUBBLES
  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_call")
      return (
        <div style={styles.toolCall}>
          <b>ðŸ›  TOOL CALL: {msg.tool}</b>
          <pre>{JSON.stringify(msg.args, null, 2)}</pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );
  };

  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.checkpointRow}>
        <label>Checkpoint ID:</label>
        <input
          value={checkpointId}
          onChange={(e) => setCheckpointId(e.target.value)}
          placeholder="Enter checkpoint ID"
          style={styles.checkpointInput}
        />
      </div>

      <div style={styles.chatBox}>
        {messages.map((m, i) => (
          <div key={i}>{renderBubble(m)}</div>
        ))}
        {loading && <div style={styles.loading}>Processing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// STYLES
const styles = {
  page: { width: "750px", margin: "40px auto", fontFamily: "Arial" },
  title: { textAlign: "center", marginBottom: "10px" },
  checkpointRow: { display: "flex", gap: "10px", marginBottom: "10px" },
  checkpointInput: {
    flex: 1,
    padding: "8px",
    border: "1px solid #ccc",
    borderRadius: "6px",
  },
  chatBox: {
    height: "500px",
    overflowY: "auto",
    padding: "15px",
    border: "1px solid #ddd",
    borderRadius: "12px",
    background: "#fafafa",
  },
  userMsg: {
    background: "#4f46e5",
    color: "white",
    padding: "10px 15px",
    borderRadius: "10px",
    margin: "8px 0 8px 150px",
    textAlign: "right",
  },
  aiMsg: {
    background: "#e5e7eb",
    padding: "10px 15px",
    borderRadius: "10px",
    margin: "8px 150px 8px 0",
  },
  toolCall: {
    background: "#fff4d6",
    borderLeft: "5px solid #f0b94b",
    padding: "10px",
    marginTop: "10px",
    borderRadius: "8px",
  },
  toolOutput: {
    background: "#e3f1ff",
    borderLeft: "5px solid #6fb2ff",
    padding: "10px",
    marginTop: "10px",
    borderRadius: "8px",
  },
  loading: { marginTop: "10px", color: "#777" },
  inputBar: { display: "flex", marginTop: "15px" },
  input: {
    flex: 1,
    padding: "12px",
    border: "1px solid #ccc",
    borderRadius: "8px",
  },
  sendBtn: {
    padding: "12px 25px",
    background: "#4f46e5",
    color: "white",
    border: "none",
    borderRadius: "8px",
    marginLeft: "10px",
  },
};
