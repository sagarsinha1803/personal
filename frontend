import React, { useState, useEffect, useRef } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [checkpointId, setCheckpointId] = useState("");
  const [loading, setLoading] = useState(false);

  const toolOutputRef = useRef("");
  const isProcessingTool = useRef(false); // â­ CRITICAL FIX FLAG

  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ I'm your AI Assistant.\nI can help with device details, troubleshooting, SSH automation and more.\n\nHow can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  const sendMessage = async () => {
    if (!input.trim()) return;

    const userMsg = input;
    setMessages((prev) => [...prev, { type: "user", text: userMsg }]);
    setInput("");

    const payload = {
      message: userMsg,
      protected_mode: false,
      checkpoint_id: checkpointId || null,
    };

    toolOutputRef.current = "";
    isProcessingTool.current = false; // â­ Reset before request

    setLoading(true);

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder();

    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value);
      const lines = chunk.split("\n");

      for (const line of lines) {
        if (!line.startsWith("data:")) continue;
        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // checkpoint update
        if (event.checkpoint_id) {
          setCheckpointId(event.checkpoint_id);
        }

        // =======================
        // TOOL CALL
        // =======================
        if (event.type === "tool_call") {
          isProcessingTool.current = true; // â­ tool mode ON

          const toolBubble = {
            type: "tool_call",
            tool: event.tool,
            args: event.args,
          };

          setMessages((prev) => {
            const lastUser = prev.map((m) => m.type).lastIndexOf("user");
            return [
              ...prev.slice(0, lastUser + 1),
              toolBubble,
              ...prev.slice(lastUser + 1),
            ];
          });

          continue;
        }

        // =======================
        // MESSAGE EVENT
        // =======================
        if (event.type === "message") {
          if (isProcessingTool.current) {
            // â­ This is tool output
            toolOutputRef.current += event.content;
          } else {
            // â­ NORMAL AI RESPONSE â†’ ALWAYS append at bottom
            setMessages((prev) => [
              ...prev,
              { type: "ai", text: event.content },
            ]);
          }
        }
      }
    }

    // =======================
    // FINAL TOOL OUTPUT
    // =======================
    if (toolOutputRef.current.trim()) {
      const outBubble = {
        type: "tool_output",
        text: toolOutputRef.current,
      };

      setMessages((prev) => {
        const lastTool = prev.map((m) => m.type).lastIndexOf("tool_call");
        if (lastTool === -1) return [...prev, outBubble];
        return [
          ...prev.slice(0, lastTool + 1),
          outBubble,
          ...prev.slice(lastTool + 1),
        ];
      });
    }

    isProcessingTool.current = false; // reset
    setLoading(false);
  };

  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_call")
      return (
        <div style={styles.toolCall}>
          <b>ðŸ›  TOOL CALL: {msg.tool}</b>
          <pre style={{ whiteSpace: "pre-wrap" }}>
            {JSON.stringify(msg.args, null, 2)}
          </pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );
  };

  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.checkpointRow}>
        <label>Checkpoint ID:</label>
        <input
          value={checkpointId}
          onChange={(e) => setCheckpointId(e.target.value)}
          placeholder="Enter checkpoint ID"
          style={styles.cpInput}
        />
      </div>

      <div style={styles.chatBox}>
        {messages.map((msg, i) => (
          <div key={i}>{renderBubble(msg)}</div>
        ))}
        {loading && <div style={styles.loading}>Processing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// STYLES ============
const styles = {
  page: { width: "750px", margin: "40px auto", fontFamily: "Arial" },
  title: { textAlign: "center", marginBottom: "10px" },

  checkpointRow: {
    display: "flex",
    gap: "10px",
    marginBottom: "10px",
    alignItems: "center",
  },
  cpInput: {
    flex: 1,
    padding: "8px",
    borderRadius: "6px",
    border: "1px solid #ccc",
  },

  chatBox: {
    height: "500px",
    overflowY: "auto",
    border: "1px solid #ddd",
    borderRadius: "12px",
    background: "#fafafa",
    padding: "15px",
  },

  userMsg: {
    background: "#4f46e5",
    color: "white",
    padding: "10px 15px",
    borderRadius: "10px",
    margin: "10px 0 10px 150px",
    textAlign: "right",
  },

  aiMsg: {
    background: "#e5e7eb",
    padding: "10px 15px",
    borderRadius: "10px",
    margin: "10px 150px 10px 0",
  },

  toolCall: {
    background: "#fff4d6",
    borderLeft: "5px solid #f0b94b",
    padding: "10px",
    marginTop: "10px",
    borderRadius: "8px",
  },

  toolOutput: {
    background: "#e3f1ff",
    borderLeft: "5px solid #6fb2ff",
    padding: "10px",
    marginTop: "10px",
    borderRadius: "8px",
  },

  loading: { color: "#777", marginTop: "10px" },

  inputBar: { display: "flex", marginTop: "15px" },

  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "8px",
    border: "1px solid #ccc",
  },

  sendBtn: {
    padding: "12px 25px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "8px",
    border: "none",
    marginLeft: "10px",
  },
};
