import React, { useState, useEffect } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);

  const [tempToolCall, setTempToolCall] = useState(null); // Tool call persists

  // Add greeting message on load
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ I'm your AI Assistant.\n\n" +
          "I can help with device details, automation, troubleshooting and SSH operations.\n\n" +
          "How can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  const sendMessage = async () => {
    if (!input.trim()) return;

    const userMsg = input;
    setInput("");

    // Add user message
    setMessages((prev) => [...prev, { type: "user", text: userMsg }]);

    const payload = {
      message: userMsg,
      protected_mode: false,
      checkpoint_id: null,
    };

    setLoading(true);

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder("utf-8");

    let aiText = "";
    let toolOutput = "";
    let toolCallData = null;

    // Add placeholder AI bubble
    let aiIndex = null;
    setMessages((prev) => {
      aiIndex = prev.length;
      return [...prev, { type: "ai", text: "" }];
    });

    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value);
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // ============================
        // TOOL CALL (persistent on top)
        // ============================
        if (event.type === "tool_call") {
          toolCallData = {
            tool: event.tool,
            args: event.args,
          };
          setTempToolCall(toolCallData);
          continue;
        }

        // ============================
        // AI or TOOL OUTPUT STREAMING
        // ============================
        if (event.type === "message") {
          // If tool call happened â†’ all messages = tool output
          if (toolCallData) {
            toolOutput += event.content;
          } else {
            aiText += event.content;

            // Update placeholder AI bubble
            setMessages((prev) => {
              const updated = [...prev];
              updated[aiIndex] = { type: "ai", text: aiText };
              return updated;
            });
          }
        }
      }
    }

    setLoading(false);

    // Push tool output bubble
    if (toolOutput.trim() !== "") {
      setMessages((prev) => [
        ...prev,
        { type: "tool_output", text: toolOutput },
      ]);
    }
  };

  // Bubble renderer
  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap", margin: 0 }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap", margin: 0 }}>{msg.text}</pre>
        </div>
      );

    return null;
  };

  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {/* ðŸ”¥ TOOL CALL ALWAYS ON TOP, NEVER REMOVED */}
        {tempToolCall && (
          <div style={styles.toolCall}>
            <strong>ðŸ›  TOOL CALL: {tempToolCall.tool}</strong>
            <pre style={{ whiteSpace: "pre-wrap", margin: 0 }}>
              {JSON.stringify(tempToolCall.args, null, 2)}
            </pre>
          </div>
        )}

        {/* Chat messages */}
        {messages.map((msg, i) => (
          <div key={i}>{renderBubble(msg)}</div>
        ))}

        {loading && <div style={styles.loading}>Typing...</div>}
      </div>

      <div style={styles.inputRow}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// ===============================
// ðŸŽ¨ CLEAN UI STYLES
// ===============================
const styles = {
  page: { width: 750, margin: "40px auto", fontFamily: "Arial" },
  title: { textAlign: "center", marginBottom: 10 },
  chatBox: {
    height: 500,
    overflowY: "auto",
    border: "1px solid #ddd",
    borderRadius: 10,
    padding: 20,
    background: "#fafafa",
  },

  toolCall: {
    background: "#fff7d1",
    border: "1px solid #ffde80",
    padding: 12,
    borderRadius: 10,
    marginBottom: 12,
  },

  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "#fff",
    padding: "10px 14px",
    borderRadius: 10,
    marginTop: 10,
    marginLeft: "120px",
  },

  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px 14px",
    borderRadius: 10,
    marginTop: 10,
    marginRight: "120px",
  },

  toolOutput: {
    background: "#e7f2ff",
    border: "1px solid #a8d0ff",
    padding: 12,
    borderRadius: 10,
    marginTop: 10,
  },

  loading: { marginTop: 10, color: "#777", fontStyle: "italic" },

  inputRow: { display: "flex", marginTop: 15, gap: 10 },
  input: {
    flex: 1,
    padding: 12,
    borderRadius: 8,
    border: "1px solid #ccc",
  },
  sendBtn: {
    padding: "12px 20px",
    background: "#4f46e5",
    color: "#fff",
    border: "none",
    borderRadius: 8,
    cursor: "pointer",
  },
};
