import React, { useState, useEffect } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);

  const [tempToolCall, setTempToolCall] = useState(null);
  const [toolOutput, setToolOutput] = useState(null);

  // ----------------------------------------------------
  // ðŸ”¥ AUTO GREETING WHEN APP LOADS
  // ----------------------------------------------------
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ Iâ€™m your AI Assistant.\n\n" +
          "I can help you with device info, troubleshooting, SSH automation, tool execution and much more.\n\n" +
          "How can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  // ----------------------------------------------------
  // FUNCTION: SEND MESSAGE
  // ----------------------------------------------------
  const sendMessage = async () => {
    if (!input.trim()) return;

    // Add user's message
    setMessages((prev) => [...prev, { type: "user", text: input }]);

    const payload = {
      message: input,
      protected_mode: false,
      checkpoint_id: null,
    };

    setInput("");
    setLoading(true);
    setToolOutput(null);

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder("utf-8");

    // INITIAL AI MESSAGE HOLDER
    let aiIndex = null;
    setMessages((prev) => {
      aiIndex = prev.length;
      return [...prev, { type: "ai", text: "" }];
    });

    // ----------------------------------------------------
    // STREAM LOOP
    // ----------------------------------------------------
    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value, { stream: true });
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // ----------------------------------------------------
        // TOOL CALL â†’ show temporary yellow box
        // ----------------------------------------------------
        if (event.type === "tool_call") {
          setTempToolCall({
            tool: event.tool,
            args: event.args,
          });
        }

        // ----------------------------------------------------
        // TOOL OUTPUT: backend sends as multiple "message" chunks
        // ----------------------------------------------------
        if (event.type === "message") {
          // Hide tool call before showing output
          if (tempToolCall) setTempToolCall(null);

          setToolOutput((prev) => (prev || "") + event.content);
          continue;
        }
      }
    }

    setLoading(false);

    // ----------------------------------------------------
    // FINAL OUTPUT BLOCK FOR TOOL
    // ----------------------------------------------------
    if (toolOutput) {
      setMessages((prev) => [
        ...prev,
        { type: "tool_output", text: toolOutput },
      ]);
      setToolOutput(null);
    }
  };

  // ----------------------------------------------------
  // BUBBLE RENDERING
  // ----------------------------------------------------
  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );
  };

  // ----------------------------------------------------
  // UI
  // ----------------------------------------------------
  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {/* Temporary Tool Call Box */}
        {tempToolCall && (
          <div style={styles.toolCall}>
            <strong>ðŸ›  Tool Call: {tempToolCall.tool}</strong>
            <pre style={{ whiteSpace: "pre-wrap" }}>
              {JSON.stringify(tempToolCall.args, null, 2)}
            </pre>
          </div>
        )}

        {/* Chat Messages */}
        {messages.map((msg, idx) => (
          <div key={idx}>{renderBubble(msg)}</div>
        ))}

        {loading && <div style={styles.loading}>Typing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

// ----------------------------------------------------
// STYLES
// ----------------------------------------------------
const styles = {
  page: {
    width: "700px",
    margin: "40px auto",
    fontFamily: "Arial",
  },
  title: { textAlign: "center", marginBottom: "10px" },

  chatBox: {
    height: "500px",
    overflowY: "auto",
    border: "1px solid #ccc",
    borderRadius: "10px",
    padding: "15px",
    background: "#fafafa",
  },

  toolCall: {
    background: "#fff7db",
    border: "1px solid #f4d27d",
    padding: "10px",
    borderRadius: "10px",
    marginBottom: "10px",
  },

  toolOutput: {
    background: "#e7f2ff",
    border: "1px solid #a8d0ff",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
  },

  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "white",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "8px",
    marginLeft: "120px",
  },

  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "8px",
    marginRight: "120px",
  },

  loading: { color: "#777", marginTop: "8px" },

  inputBar: { display: "flex", marginTop: "15px" },
  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "8px",
    border: "1px solid #ccc",
  },
  sendBtn: {
    padding: "12px 20px",
    marginLeft: "10px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "8px",
    border: "none",
  },
};
