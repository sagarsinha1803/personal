import React, { useState, useEffect } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);

  // Add greeting on first render
  useEffect(() => {
    setMessages([
      {
        type: "ai",
        text:
          "Hello! ðŸ‘‹ Iâ€™m your AI Assistant.\n\n" +
          "I can help you with device details, troubleshooting, SSH tasks, automation and more.\n" +
          "How can I assist you today? ðŸ˜Š",
      },
    ]);
  }, []);

  const sendMessage = async () => {
    if (!input.trim()) return;

    // Add user msg
    setMessages((prev) => [...prev, { type: "user", text: input }]);

    const payload = {
      message: input,
      protected_mode: false,
      checkpoint_id: null,
    };

    setInput("");
    setLoading(true);

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder("utf-8");

    // Placeholder AI message for streaming
    let aiMessageIndex = null;
    let aiAccumulated = "";
    let toolOutput = "";
    let toolCallActive = false;

    setMessages((prev) => {
      aiMessageIndex = prev.length;
      return [...prev, { type: "ai", text: "" }];
    });

    while (true) {
      const { done, value } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value, { stream: true });
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // -----------------------------
        // TOOL CALL
        // -----------------------------
        if (event.type === "tool_call") {
          toolCallActive = true;

          const toolCallMsg = {
            type: "tool_call",
            tool: event.tool,
            args: event.args,
          };

          // Insert tool call BELOW user's request
          setMessages((prev) => [...prev, toolCallMsg]);
          continue;
        }

        // -----------------------------
        // TOOL OUTPUT (as message chunks)
        // -----------------------------
        if (event.type === "message") {
          if (toolCallActive) {
            toolOutput += event.content;
          } else {
            aiAccumulated += event.content;

            setMessages((prev) => {
              const updated = [...prev];
              updated[aiMessageIndex] = { type: "ai", text: aiAccumulated };
              return updated;
            });
          }
        }
      }
    }

    setLoading(false);

    // After stream ends â€” insert tool output below tool call
    if (toolOutput.trim() !== "") {
      setMessages((prev) => [
        ...prev,
        { type: "tool_output", text: toolOutput },
      ]);
    }
  };

  // UI for each bubble
  const renderBubble = (msg) => {
    if (msg.type === "user")
      return <div style={styles.userMsg}>{msg.text}</div>;

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "tool_call")
      return (
        <div style={styles.toolCall}>
          <strong>ðŸ›  TOOL CALL: {msg.tool}</strong>
          <pre style={{ whiteSpace: "pre-wrap" }}>
            {JSON.stringify(msg.args, null, 2)}
          </pre>
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );
  };

  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {messages.map((msg, idx) => (
          <div key={idx}>{renderBubble(msg)}</div>
        ))}

        {loading && <div style={styles.loading}>Typing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          placeholder="Type a message..."
          value={input}
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

/* ================================
   STYLES
================================ */
const styles = {
  page: {
    width: "800px",
    margin: "40px auto",
    fontFamily: "Arial",
  },
  title: { textAlign: "center", marginBottom: "15px" },

  chatBox: {
    height: "550px",
    overflowY: "auto",
    border: "1px solid #ccc",
    borderRadius: "10px",
    padding: "15px",
    background: "#fafafa",
  },

  userMsg: {
    background: "#4f46e5",
    color: "white",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "10px",
    marginLeft: "200px",
    textAlign: "right",
  },

  aiMsg: {
    background: "#e5e7eb",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "10px",
    marginRight: "200px",
    textAlign: "left",
  },

  toolCall: {
    background: "#fff4cc",
    border: "1px solid #e6c76f",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
  },

  toolOutput: {
    background: "#e6f2ff",
    border: "1px solid #a7cfff",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
  },

  loading: { color: "#777", marginTop: "10px" },

  inputBar: { display: "flex", marginTop: "15px" },
  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "8px",
    border: "1px solid #ccc",
  },
  sendBtn: {
    padding: "12px 20px",
    marginLeft: "10px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "8px",
    border: "none",
  },
};
