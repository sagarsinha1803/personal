import React, { useState } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);
  const [interrupt, setInterrupt] = useState(null);

  const sendMessage = async () => {
    if (!input.trim()) return;

    // Add user message
    setMessages((prev) => [...prev, { sender: "user", text: input }]);

    const payload = {
      message: input,            // üî• message POST body me jaa raha hai
      protected_mode: false,
      checkpoint_id: null
    };

    setInput("");
    setLoading(true);

    // üî• POST request with streaming response
    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(payload),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder("utf-8");

    // üî• CONTINUOUS STREAM READER
    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value, { stream: true });

      // Split SSE-like lines
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // üîµ Normal AI response
        if (event.type === "message") {
          setMessages((prev) => [...prev, { sender: "ai", text: event.content }]);
        }

        // üü£ Tool call response
        if (event.type === "tool_call") {
          setMessages((prev) => [
            ...prev,
            { sender: "ai", text: `üîß Tool: ${event.tool} | Args: ${JSON.stringify(event.args)}` },
          ]);
        }

        // üî¥ Human approval required (HITL)
        if (event.type === "human_approval_required") {
          setInterrupt(event.interrupt);

          setMessages((prev) => [
            ...prev,
            { sender: "ai", text: "‚ö† Human approval required. Waiting for your decision..." },
          ]);

          setLoading(false);
          return; // Stop reading further
        }

        // AI finished
        if (event.type === "end") {
          setLoading(false);
          return;
        }
      }
    }

    setLoading(false);
  };

  return (
    <div style={styles.container}>
      <h2>AI Assistant</h2>

      <div style={styles.chatBox}>
        {messages.map((msg, i) => (
          <div
            key={i}
            style={msg.sender === "user" ? styles.userMsg : styles.aiMsg}
          >
            {msg.text}
          </div>
        ))}
        {loading && <div style={styles.loader}>Typing...</div>}
      </div>

      <div style={styles.inputRow}>
        <input
          style={styles.input}
          value={input}
          placeholder="Type a message..."
          onChange={(e) => setInput(e.target.value)}
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>

      {/* Human Approval Modal */}
      {interrupt && (
        <div style={styles.modalBG}>
          <div style={styles.modal}>
            <h3>‚ö† Human Approval Needed</h3>
            <pre style={styles.codeBox}>
{JSON.stringify(interrupt, null, 2)}
            </pre>

            <button style={styles.greenBtn}>
              ‚úî Continue (call your resume API here)
            </button>
            <button style={styles.redBtn}>
              ‚ùå Reject (call your resume API here)
            </button>
          </div>
        </div>
      )}
    </div>
  );
}

// UI styles
const styles = {
  container: { width: "600px", margin: "40px auto", fontFamily: "Arial" },
  chatBox: {
    height: "450px",
    overflowY: "auto",
    border: "1px solid #ddd",
    padding: "10px",
    borderRadius: "8px",
    marginBottom: "12px",
  },
  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    color: "white",
    padding: "10px",
    borderRadius: "10px",
    margin: "8px 0",
    marginLeft: "100px",
  },
  aiMsg: {
    textAlign: "left",
    background: "#e4e4e7",
    padding: "10px",
    borderRadius: "10px",
    margin: "8px 0",
    marginRight: "100px",
  },
  loader: { marginTop: 5, color: "#777" },
  inputRow: { display: "flex", gap: "10px" },
  input: { flex: 1, padding: "12px", borderRadius: "8px", border: "1px solid #ccc" },
  sendBtn: {
    padding: "12px 20px",
    background: "#4f46e5",
    color: "white",
    borderRadius: "8px",
    border: "none",
    cursor: "pointer",
  },
  modalBG: {
    position: "fixed", top: 0, left: 0, right: 0, bottom: 0,
    background: "rgba(0,0,0,0.4)",
    display: "flex", justifyContent: "center", alignItems: "center",
  },
  modal: {
    background: "white", padding: "20px", width: "360px",
    borderRadius: "12px",
  },
  codeBox: {
    background: "#f4f4f4",
    padding: "10px",
    borderRadius: "8px",
    height: "150px",
    overflowY: "auto",
  },
  greenBtn: {
    background: "#22c55e",
    padding: "10px", borderRadius: "8px",
    color: "white", width: "100%", marginTop: "10px",
  },
  redBtn: {
    background: "#ef4444",
    padding: "10px", borderRadius: "8px",
    color: "white", width: "100%", marginTop: "10px",
  },
};
