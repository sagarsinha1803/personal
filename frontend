import React, { useState } from "react";

export default function App() {
  const [input, setInput] = useState("");
  const [messages, setMessages] = useState([]);
  const [loading, setLoading] = useState(false);

  const [tempToolCall, setTempToolCall] = useState(null); // show temporary tool message

  const sendMessage = async () => {
    if (!input.trim()) return;

    // Add user's message
    setMessages((prev) => [...prev, { type: "user", text: input }]);

    const body = {
      message: input,
      protected_mode: false,
      checkpoint_id: null,
    };

    setInput("");
    setLoading(true);

    const response = await fetch("http://localhost:8000/agent/chat_stream", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(body),
    });

    const reader = response.body.getReader();
    const decoder = new TextDecoder("utf-8");

    // Make an empty AI message for streaming text
    let aiIndex = null;
    setMessages((prev) => {
      aiIndex = prev.length;
      return [...prev, { type: "ai", text: "" }];
    });

    while (true) {
      const { value, done } = await reader.read();
      if (done) break;

      const chunk = decoder.decode(value, { stream: true });
      const lines = chunk.split("\n");

      for (let line of lines) {
        if (!line.startsWith("data:")) continue;

        const jsonStr = line.replace("data:", "").trim();
        if (!jsonStr) continue;

        let event;
        try {
          event = JSON.parse(jsonStr);
        } catch {
          continue;
        }

        // ================================
        // NORMAL AI MESSAGE STREAM
        // ================================
        if (event.type === "message") {
          setMessages((prev) => {
            const updated = [...prev];
            updated[aiIndex].text += event.content;
            return updated;
          });
        }

        // ================================
        // TOOL CALL â€” SHOW TEMPORARILY
        // ================================
        if (event.type === "tool_call") {
          setTempToolCall({
            tool: event.tool,
            args: event.args,
          });
        }

        // ================================
        // TOOL OUTPUT â€” replace tool_call bubble
        // ================================
        if (event.type === "tool_output") {
          setTempToolCall(null); // hide tool call box

          setMessages((prev) => [
            ...prev,
            {
              type: "tool_output",
              text: event.output,
            },
          ]);
        }

        // ================================
        // HUMAN APPROVAL (OPTIONAL)
        // ================================
        if (event.type === "human_approval_required") {
          setMessages((prev) => [
            ...prev,
            {
              type: "approval",
              text: "âš  Human Approval Required!",
            },
          ]);
        }
      }
    }

    setLoading(false);
  };

  const renderBubble = (msg) => {
    if (msg.type === "user")
      return (
        <div style={styles.userMsg}>
          {msg.text}
        </div>
      );

    if (msg.type === "ai")
      return (
        <div style={styles.aiMsg}>
          {msg.text}
        </div>
      );

    if (msg.type === "tool_output")
      return (
        <div style={styles.toolOutput}>
          <pre style={{ whiteSpace: "pre-wrap" }}>{msg.text}</pre>
        </div>
      );

    if (msg.type === "approval")
      return (
        <div style={styles.approvalMsg}>
          {msg.text}
        </div>
      );
  };

  return (
    <div style={styles.page}>
      <h2 style={styles.title}>AI Assistant</h2>

      <div style={styles.chatBox}>
        {messages.map((msg, idx) => (
          <div key={idx}>{renderBubble(msg)}</div>
        ))}

        {/* Show tool call temporarily */}
        {tempToolCall && (
          <div style={styles.toolCallBox}>
            <strong>ðŸ›  Tool Call:</strong> {tempToolCall.tool}
            <br />
            <pre style={{ whiteSpace: "pre-wrap" }}>
              {JSON.stringify(tempToolCall.args, null, 2)}
            </pre>
          </div>
        )}

        {loading && <div style={styles.loading}>Typing...</div>}
      </div>

      <div style={styles.inputBar}>
        <input
          style={styles.input}
          value={input}
          onChange={(e) => setInput(e.target.value)}
          placeholder="Type a message..."
        />
        <button style={styles.sendBtn} onClick={sendMessage}>
          Send
        </button>
      </div>
    </div>
  );
}

const styles = {
  page: {
    width: "700px",
    margin: "40px auto",
    fontFamily: "Arial",
  },
  title: {
    textAlign: "center",
    marginBottom: "15px",
  },
  chatBox: {
    height: "500px",
    overflowY: "auto",
    padding: "15px",
    border: "1px solid #ddd",
    borderRadius: "8px",
    background: "#fafafa",
  },
  userMsg: {
    textAlign: "right",
    background: "#4f46e5",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "8px",
    marginLeft: "120px",
    color: "white",
  },
  aiMsg: {
    textAlign: "left",
    background: "#e5e7eb",
    padding: "10px 14px",
    borderRadius: "10px",
    marginTop: "8px",
    marginRight: "120px",
  },
  toolCallBox: {
    background: "#fff7e6",
    border: "1px solid #f2c97d",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
    fontSize: "14px",
  },
  toolOutput: {
    background: "#eef6ff",
    border: "1px solid #90c2ff",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
    fontSize: "14px",
    whiteSpace: "pre-wrap",
  },
  approvalMsg: {
    background: "#ffe8e8",
    border: "1px solid #ff9a9a",
    padding: "12px",
    borderRadius: "10px",
    marginTop: "10px",
    color: "#d60000",
    fontWeight: "bold",
  },
  inputBar: {
    display: "flex",
    marginTop: "15px",
  },
  input: {
    flex: 1,
    padding: "12px",
    borderRadius: "8px",
    border: "1px solid #ccc",
  },
  sendBtn: {
    padding: "12px 20px",
    marginLeft: "10px",
    borderRadius: "8px",
    background: "#4f46e5",
    color: "white",
    border: "none",
    cursor: "pointer",
  },
  loading: { fontStyle: "italic", color: "#777", marginTop: "10px" },
};
